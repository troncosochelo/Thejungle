<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="restaurante.nomina_sueldo_list">
      <field name="name">Nomina Sueldo</field>
      <field name="model">restaurante.nomina_sueldo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="cocinero_id"/>
          <field name="fecha"/>
          <field name="monto"/>

          <field name= "estado"/>
        </tree>
      </field>
    </record>

    

    
     <record model="ir.ui.view" id="restaurante.nomina_sueldo_form">
            <field name="name">Nomina Sueldo</field>
            <field name="model">restaurante.nomina_sueldo</field>
            <field name="arch" type="xml">
                <form string="restaurante form">
                    <header>
                        <field name="estado" widget="statusbar" clickable="True"/>
                    </header> 
                    <sheet>
                        <group col="4">
                            <field name="id"/>
                            <field name="cocinero_id"/>
                            <field name="fecha"/>
                            <field name="monto"/>   
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <!-- actions opening views on models -->
 
    <record model="ir.actions.act_window" id="restaurante_nomina_sueldo_action_window">
      <field name="name">Lista nomina_sueldo</field>
      <field name="res_model">restaurante.nomina_sueldo</field>
      <field name="view_mode">tree,form</field>
    </record>

